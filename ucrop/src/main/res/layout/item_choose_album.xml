<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/allItem"
			  android:layout_width="match_parent"
			  android:layout_height="92dp"
			  android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="91.67dp"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<LinearLayout
			android:id="@+id/allPic"
			android:layout_width="79.67dp"
			android:layout_height="79.33dp"
			android:layout_marginLeft="12.33dp"
			android:background="@color/ucrop_white"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/picIv"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:scaleType="centerCrop"
				android:src="@color/ucrop_white"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="11dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/albumName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14.33dp"
				android:text="所有视频"
				android:textColor="#000000"/>

			<TextView
				android:id="@+id/totalCount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="10.33dp"
				android:layout_marginTop="11dp"
				android:text="66张"/>
		</LinearLayout>
		<TextView
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1"/>
		<ImageView
			android:id="@+id/isSelectIv"
			android:layout_marginRight="30dp"
			android:layout_width="16dp"
			android:src="@mipmap/login_icon_correct"
			android:layout_height="16dp"/>

	</LinearLayout>

	<ImageView
		android:id="@+id/buttomLineIv"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="12dp"
		android:layout_marginRight="12dp"
		android:background="@color/ucrop_main_line"/>

</LinearLayout>