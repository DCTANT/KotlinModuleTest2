<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/wholeItem"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/shape_dialog_background"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="18dp"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dialogContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:minEms="12"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="您确定要删除这个记录吗？"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_normal_btn"
                android:text="取消"
                android:textColor="#777777"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="18dp"
                android:layout_marginRight="15dp"
                android:paddingRight="18dp"/>
            <TextView
                android:id="@+id/confirmBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_danger_btn"
                android:text="确定"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginLeft="15dp"
                android:textColor="#ff0f2f"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>